# ----------------------------------------------------------------------------
#   Box configuration file.
# ----------------------------------------------------------------------------

production:             yes

friendly name:          ophiuchus2
dns hostname:           ophiuchus2
username:               root
password:               "!bootstrap"
type:                   NGMG ShM
log files:
    -   name:           messages
        type:           messages
        full path:      /var/log/messages
commands:
    -   name:           hpilist
        type:           hpilist
        command:        "while [[ 1 ]]; do nice -n 19 hpilist -sen; sleep 10; done"
# ----------------------------------------------------------------------------
        
